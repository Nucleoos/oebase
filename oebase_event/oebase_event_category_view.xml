<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oebase_event_category_form" model="ir.ui.view">
            <field name="name">oebase.event.category.form</field>
            <field name="model">oebase.event.category</field>
            <field name="arch" type="xml">
                <form string="Event Categories" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="parent_id" class="oe_edit_only"/>
                            <h2>
                                <field name="parent_id" placeholder="Parent Category..." />
                            </h2>
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Event Category..." />
                            </h1>
                            <label for="description" class="oe_edit_only"/>
                            <h3>
                                <field name="description" placeholder="Description..." />
                            </h3>
                            <label for="notes" class="oe_edit_only"/>
                            <field name="notes" placeholder="Notes..."/>
                        </div>
                        <notebook>
                            <page string="Child Categories" groups="oebase_base.group_oebase_suser">
                                <group>
                                    <field name="child_ids" colspan="4" nolabel="1" />
                                </group>
                            </page>
                            <page string="Events" groups="oebase_base.group_oebase_suser">
                                <group>
                                    <field name="event_ids" colspan="4" nolabel="1" />
                                </group>
                            </page>
                            <page string="Settings" groups="oebase_base.group_oebase_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oebase_event_category_tree" model="ir.ui.view">
            <field name="name">oebase.event.category.tree</field>
            <field name="model">oebase.event.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Event Categories">
                    <field name="complete_name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <record id="view_oebase_event_category_search" model="ir.ui.view">
            <field name="name">oebase.event.category.search</field>
            <field name="model">oebase.event.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Category">
                    <field name="complete_name" />
                    <field name="description" />
                    <separator/>
                    <filter string="Inactive Categories" name="active" domain="[('active','=',0)]" help="Inactive Categories"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_oebase_event_category_view">
            <field name="name">Event Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oebase.event.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oebase_event_category_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new event category.
              </p><p>
                With just a quick glance on the event category screen, you
                can easily find all the information you need for each event category.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oebase_event_category_view_form">
            <field name="act_window_id" ref="act_open_oebase_event_category_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oebase_event_category_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oebase_event_category_view_tree">
            <field name="act_window_id" ref="act_open_oebase_event_category_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oebase_event_category_tree" />
        </record>
        
        <menuitem name="Categories" id="menu_base_config_event_categories"
            parent="menu_base_config_event"
            groups="oebase_base.group_oebase_suser"
            sequence="10"
            action="act_open_oebase_event_category_view" />

        <record id="view_oebase_event_tree_category" model="ir.ui.view">
            <field name="name">oebase.event.tree</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="subject" position="before">
                    <field name="category_ids" groups="oebase_base.group_oebase_suser"/>
                </field>
            </field>
        </record>

        <record id="view_oebase_event_form_category" model="ir.ui.view">
            <field name="name">oebase.event.form</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <div name="center" position="inside">
                    <label for="category_ids" class="oe_edit_only"/>
                    <h2>
                        <field name="category_ids" widget="many2many_tags" placeholder="Categories..." groups="oebase_base.group_oebase_suser"/>
                    </h2>
                </div>
            </field>
        </record>

        <record id="view_oebase_event_search_category" model="ir.ui.view">
            <field name="name">oebase.event.search</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="subject" position="after">
                    <field name="category_ids" />
                </field>
            </field>
        </record>

    </data>
</openerp>

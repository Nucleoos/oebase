<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_oebase_event_tree_tag" model="ir.ui.view">
            <field name="name">oebase.event.tree</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="subject" position="before">
                    <field name="tag_ids" groups="oebase_base.group_oebase_suser"/>
                </field>
            </field>
        </record>

        <record id="view_oebase_event_form_tag" model="ir.ui.view">
            <field name="name">oebase.event.form</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <div name="center" position="inside">
                    <label for="tag_ids" class="oe_edit_only"/>
                    <h2>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Tags..." groups="oebase_base.group_oebase_suser"/>
                    </h2>
                </div>
            </field>
        </record>

        <record id="view_oebase_event_search_tag" model="ir.ui.view">
            <field name="name">oebase.event.search</field>
            <field name="model">oebase.event</field>
            <field name="inherit_id" ref="view_oebase_event_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="subject" position="after">
                    <field name="tag_ids" />
                </field>
            </field>
        </record>

        <record id="view_oebase_tag_form" model="ir.ui.view">
            <field name="name">oebase.tag.form</field>
            <field name="model">oebase.tag</field>
            <field name="inherit_id" ref="oebase_tag.view_oebase_tag_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Events">
                        <group>
                            <field name="event_ids" colspan="4" nolabel="1" />
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
